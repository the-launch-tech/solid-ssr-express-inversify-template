{
	"name": "solid-ssr",
	"version": "1.0.0",
	"description": "",
	"author": "Alexandre Mouton-Brady",
	"license": "ISC",
	"keywords": [
		"solid",
		"solid-js",
		"ssr"
	],
	"main": "index.js",
	"scripts": {
		"dev:start": "run-s dev:build format lint test cert dev:watch",
		"dev:watch": "nodemon",
		"dev:build": "concurrently --kill-others-on-fail -n w: \"pnpm:dev:build:client\" \"pnpm:dev:build:server\"",
		"dev:build:client": "vite build --outDir dist/client",
		"dev:build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
		"lint": "eslint --ignore-path .eslintignore --ext .ts .",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"test": "run-s test:browser",
		"test:browser": "jest --coverage --selectProjects BROWSER",
		"prerender": "vite build --outDir dist/static && npm run build:server && node internals/prerenderer",
		"debug": "nodemon --inspect-brk",
		"cert": "rm -rf .cert && mkdir -p .cert && mkcert -key-file ./.cert/key.pem -cert-file ./.cert/cert.pem 'localhost'"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"express": "^4.17.1",
		"localstorage-polyfill": "^1.0.1",
		"serve-static": "^1.14.1",
		"solid-app-router": "^0.1.5",
		"solid-js": "^1.1.3",
		"solid-meta": "^0.27.2",
		"ts-node": "^10.5.0",
		"tslib": "^2.3.1"
	},
	"devDependencies": {
		"@babel/core": "^7.15.5",
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.16",
		"@types/serve-static": "^1.13.10",
		"@typescript-eslint/eslint-plugin": "^5.11.0",
		"@typescript-eslint/parser": "^5.11.0",
		"@typescript-eslint/type-utils": "^5.11.0",
		"@typescript-eslint/utils": "^5.11.0",
		"babel-preset-solid": "^1.1.3",
		"concurrently": "^6.3.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.8.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-ext": "^0.1.0",
		"eslint-plugin-import": "2.23.4",
		"eslint-utils": "^3.0.0",
		"jest": "^27.5.1",
		"jiti": "^1.12.0",
		"nodemon": "^2.0.13",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.6",
		"postcss-scss": "^4.0.3",
		"prettier": "^2.5.1",
		"rollup-plugin-typescript-paths": "^1.3.0",
		"solid-jest": "^0.2.0",
		"stylelint": "^14.4.0",
		"stylelint-config-recommended-scss": "^5.0.2",
		"stylelint-config-standard-scss": "^3.0.0",
		"typescript": "^4.4.4",
		"vite": "^2.5.7",
		"vite-plugin-solid": "^2.0.3"
	}
}
