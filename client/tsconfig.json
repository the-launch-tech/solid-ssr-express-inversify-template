{
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	},
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"declaration": true,
		"types": ["vite/client", "jest"],
		"outDir": "./dist",
		"baseUrl": ".",
		"importHelpers": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./*"],

			"@src/*": ["./src/*"],

			"@ssr/*": ["src/ssr/*"],
			"@server-entry/*": ["src/ssr/server-entry/*"],
			"@client-entry/*": ["src/ssr/client-entry/*"],

			"@app/*": ["src/app/*"],
			"@ui/*": ["src/app/ui/*"],
			"@pages/*": ["src/app/ui/pages/*"],
			"@components/*": ["src/app/ui/components/*"],
			"@assets/*": ["src/app/assets/*"],
			"@styles/*": ["src/app/assets/styles/*"],
			"@static/*": ["src/app/assets/static/*"]
		}
	}
}
