{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "sourceMap": true,
        "allowJs": false,
        "outDir": "./dist",
        "baseUrl": "./src",
        "lib": ["es2015"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["*"],
            "@middleware/*": ["app/middleware/*"],
            "@modules/*": ["app/modules/*"],
            "@providers/*": ["app/providers/*"],
            "@decorators/*": ["app/decorators/*"],
            "@config/*": ["config/*"],
            "@app/*": ["app/*"],
            "@account/*": ["app/modules/account/*"],
            "@auth/*": ["app/modules/auth/*"],
            "@base/*": ["app/modules/base/*"],
            "@category/*": ["app/modules/category/*"],
            "@client/*": ["app/modules/client/*"],
            "@component/*": ["app/modules/component/*"],
            "@component-type/*": ["app/modules/component-type/*"],
            "@menu/*": ["app/modules/menu/*"],
            "@menu-item/*": ["app/modules/menu-item/*"],
            "@option/*": ["app/modules/option/*"],
            "@post/*": ["app/modules/post/*"],
            "@post-type/*": ["app/modules/post-type/*"],
            "@project/*": ["app/modules/project/*"],
            "@user/*": ["app/modules/user/*"],
            "@refresh-token/*": ["app/modules/auth/refresh-token/*"],
            "@action-event/*": ["app/modules/action-event/*"],
            "@app-profile/*": ["app/modules/app-profile/*"],
            "@file/*": ["app/modules/file/*"],
            "@editor/*": ["app/modules/editor/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
